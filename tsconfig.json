{
  "compilerOptions": {
    "sourceMap": true,
    "module": "NodeNext",
    "target": "ES2019",
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
